{% extends '@PluetznerBlock/_layout/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="portlet light">
                <div class="portlet-title tabbable-line">
                    <div class="caption caption-md">
                            <span class="caption-subject font-blue-hoki bold uppercase">
                            Textblocks
                        </span>
                    </div>

                </div>

                <div class="portlet-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.slug) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.text) }}
                    </div>

                    {{ form_rest(form, {'style': 'horizontal'}) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block h1 %}
    Textblock
    {% if textblock.id %}
        <small>Bearbeiten</small>
    {% else %}
        <small>Erstellen</small>
    {% endif %}
{% endblock %}

