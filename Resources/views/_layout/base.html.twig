<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    <meta content="" name="description"/>
    <meta content="" name="author"/>

    <link rel="shortcut icon" href="{{ asset("bundles/admin/img/favicon.ico") }}"/>

    <title>{% block title %}{% endblock %}Portfolio</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet"
          type="text/css"/>

    <link href="{{ asset("bundles/pmtool/vendor/fontawesome/4.5.0/css/font-awesome.min.css") }}" rel="stylesheet"
          type="text/css"/>

    <link href="{{ asset("bundles/pmtool/vendor/bootstrap/3.3.6/css/bootstrap.min.css") }}"
          rel="stylesheet" type="text/css"/>
    <link href="{{ asset("bundles/admin/vendor/metronic-4.5.6/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css") }}"/>

    <link href="{{ asset("bundles/admin/vendor/metronic-4.5.6/assets/global/css/components-rounded.min.css") }}"
          rel="stylesheet" id="style_components" type="text/css"/>
    <link href="{{ asset("bundles/admin/vendor/metronic-4.5.6/assets/global/css/plugins.min.css") }}" rel="stylesheet"
          type="text/css"/>

    <link href="{{ asset("bundles/admin/vendor/metronic-4.5.6/assets/layout/css/layout.min.css") }}" rel="stylesheet"
          type="text/css"/>
    <link href="{{ asset("bundles/admin/vendor/metronic-4.5.6/assets/layout/css/themes/blue-steel.min.css") }}"
          rel="stylesheet" type="text/css" id="style_color"/>
    <link href="{{ asset("bundles/admin/vendor/metronic-4.5.6/assets/global/plugins/simple-line-icons/simple-line-icons.min.css") }}"
          rel="stylesheet" type="text/css" id="style_color"/>


    {% stylesheets
    output='assets/compiled.css' %}
    <link href="{{ asset_url|cssversion }}" rel="stylesheet"/>
    {% endstylesheets %}


    {% block style %}{% endblock %}

</head>

<body class="page-container-bg-solid page-sidebar-closed-hide-logo {% block body_class %}{% endblock %}">

{% include "@PluetznerBlock/_layout/app_header.html.twig" %}

<div class="page-container">
    <div class="page-content-wrapper">
        {% block page_container %}

            {% block body_section %}
                {% block header %}
                    <div class="page-head">
                        <div class="container">
                            <div class="page-title">
                                <h1>{% block h1 %}{% endblock %}</h1>
                            </div>
                            <div class="page-toolbar">{% block toolbar %}{% endblock %}</div>
                        </div>
                    </div>

                {% endblock header %}
                <div class="page-content">


                    <div class="container">
                        {% block messages %}
                            {% set messages = app.session.flashBag.keys() %}
                            {% if messages %}
                                <div class="row">
                                    <div class="col-md-12">
                                        {% for type in messages %}
                                            <div class="note note-{% if 'error' == type %}danger{% else %}{{ type }}{% endif %}">{{ app.session.flashBag.get(type)|join(' ') }}</div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        {% endblock %}
                        {% block body %}
                        {% endblock %}
                    </div>

                </div>
            {% endblock body_section %}
        {% endblock %}
    </div>


</div>
<div class="page-footer">
    <div class="container">
        <div class="page-footer-inner"> 2017 © Paul Lützner</div>
    </div>


</div>
<div class="scroll-to-top" style="display: none;">
    {{ "arrow-up"|icon }}
</div>

{% javascripts
"bundles/pmtool/vendor/jquery/2.1.4/jquery.min.js"
"bundles/pmtool/vendor/bootstrap/3.3.6/js/bootstrap.min.js"
"@BraincraftedBootstrapBundle/Resources/js/bc-bootstrap-collection.js"
"@PMToolBundle/Resources/public/vendor/bootbox/4.4.0/bootbox.min.js"
"bundles/pmtool/module/pm-bootbox/pm-bootbox.js"
"@PMToolBundle/Resources/public/module/pm-util/pm-util.js"
output='/compiled/js/core.js' %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}

<script src="{{ asset("bundles/admin/vendor/metronic-4.5.6/assets/global/scripts/app.min.js") }}"
        type="text/javascript"></script>
<script src="{{ asset("bundles/admin/vendor/metronic-4.5.6/assets/layout/scripts/layout.min.js") }}"
        type="text/javascript"></script>

{% block javascript %}{% endblock %}

<script type="text/javascript">
    $(document).ready(function () {
        {% block documentready %}{% endblock %}
    });

</script>

</body>
</html>
